<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="clickListener"
            type="com.suyash.covidate.ui.CountryListAdapter.OnClickListener" />
        <variable
            name="covid"
            type="com.suyash.covidate.network.CovidLocal" />
    </data>


    <TextView
        android:id="@+id/countryitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="@dimen/less_margin"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="@dimen/less_margin"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_round"
        android:gravity="center"
        android:padding="@dimen/less_margin"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="@{() -> clickListener.onClick(covid)}"/>



</layout>